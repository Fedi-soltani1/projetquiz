{% extends 'base.html.twig' %}

{% block title %} Level Formation {% endblock %}
{% block breadcrumb1 %} Level Formation {% endblock %}
{% block breadcrumb2 %} Liste {% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12 space20">
                    <a class="btn btn-primary pull-left" href="{{ path('fedi_ajoutlevel') }}">
                        Ajouter Level <i class="fa fa-plus"></i></a>
                </div>
            </div>
            <table class="table table-striped table-bordered table-hover table-full-width" id="sample_2">
                <thead>
                <tr>
                    <th class="hidden-xs left" width="80%"><strong>Nom</strong></th>
                    <th class="hidden-xs center" width="10%"><strong>Actions</strong></th>
                </tr>
                </thead>
                <tbody>
                {% for level in level %}
                    <tr>
                        <td class="hidden-xs left">{{ level.name }} </td>
                        <td class="hidden-xs center">
                            <a class="btn btn-success btn-xs" title="edit" href="{{ path('fedi_editlevel',{'id': level.id}) }}">
                                <span class="fa fa-edit" style="color:white"></span></a>
                            <a href="#" class="btn btn-danger btn-xs user-remove" title="supprimer" data-toggle="confirmation" class="delete-row">
                                <span class="fa fa-trash-o"  style="color:white"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}